
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">
</head>
<h2>All Transactions</h2>

<ul>
  <% transactions.forEach(t => { %>
    <li>
      <strong>Talent:</strong>
      <%= t.match.request.talent.course %>
      by <%= t.match.request.talent.student.name %> <br>

      <strong>From:</strong> <%= t.from.name %> <br>
      <strong>To:</strong> <%= t.to.name %> <br>
      <strong>Amount:</strong> <%= t.amount %> BD <br>
      <strong>Status:</strong> <%= t.status %>
    </li>
    <hr>
  <% }) %>
</ul>

<a href="/dashboard" style="display:inline-block; margin:10px 0; padding:5px 10px; background:#3498db; color:white; text-decoration:none; border-radius:4px;">Home</a>

<footer>
  <form action="/auth/logout" method="get">
    <button type="submit" class="logout-btn">Logout</button>
  </form>
</footer>
