<link rel="stylesheet" href="/styles.css">

<h2>My Requests</h2>

<a href="/requests/new" style="display:inline-block; margin-bottom:15px; padding:5px 10px; background:#4CAF50; color:white; text-decoration:none;">Add New Request</a>

<ul>
  <% requests.forEach(r => { %>
    <li>
      <strong>Talent:</strong> <%= r.talent.course %> by <%= r.talent.student.name %><br>
      <strong>Description:</strong> <%= r.description %><br>
      <strong>Requested by:</strong> <%= r.requester.name %>
    </li>
    <hr>
  <% }) %>
</ul>
<a href="/dashboard" style="display:inline-block; margin:10px 0; padding:5px 10px; background:#3498db; color:white; text-decoration:none; border-radius:4px;">Home</a>

<footer>
  <form action="/auth/logout" method="get">
    <button type="submit" class="logout-btn">Logout</button>
  </form>
</footer>
